@model IEnumerable<WebApplication1.Models.Media>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý thư viện ảnh</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.House.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Media_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Media_Path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Media_size)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.House.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Media_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Media_Path)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Media_size)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

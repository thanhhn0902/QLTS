@model IEnumerable<WebApplication1.Models.Demo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <button type="submit" class="btn btn-primary btn-sm" id="openPopup" data-toggle="modal" data-target="#modal-lg">
        Create New
    </button>
</p>
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Age</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Age)
                                    </td>
                                    <td>
                                        <button type="submit" class="btn btn-default btn-sm openPopupEdit" data-toggle="modal" data-target="#modal-lg" value="@item.Id">Edit</button>
                                        <button type="submit" class="btn btn-info btn-sm openPopupDetails" data-toggle="modal" data-target="#modal-lg" value="@item.Id">Details</button>
                                        <button type="submit" class="btn btn-warning btn-sm openPopupDelete" data-toggle="modal" data-target="#modal-lg" value="@item.Id">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- Content Wrapper. Contains page content -->
<div class="modal fade" id="modal-lg" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">User</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function (e) {
            $('#openPopup').click(function () {
                $('.modal-body').load('/Demo/Create');
            });
            $('.openPopupEdit').click(function () {
                $('.modal-body').load('/Demo/Edit/' + $(this).val());
            });
            $('.openPopupDetails').click(function () {
                $('.modal-body').load('/Demo/Details/' + $(this).val());
            });
            $('.openPopupDelete').click(function () {
                $('.modal-body').load('/Demo/Delete/' + $(this).val());
            });
        });
    </script>
}

